FROM python:3.9-slim

WORKDIR /app

ENV PYTHONDONTWRITEBYTECODE 1
ENV PYTHONUNBUFFERED 1


COPY requirements.txt /app/
RUN pip install --upgrade pip
RUN pip install --no-cache-dir -r requirements.txt

COPY . /app/

RUN pwd
RUN ls -la
RUN rm -r ag_creator client user_data/methods.py
RUN chmod +x /app/csv_reader/entrypoint.sh
ENTRYPOINT ["/app/csv_reader/entrypoint.sh"]

CMD ["python", "manage.py", "init_csv"]
